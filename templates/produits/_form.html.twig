{{ form_start(form) }}

{# Affiche les erreurs globales du formulaire (si le formulaire est invalide globalement) #}
{% if form.vars.errors is not empty %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}

{# Itère sur chaque champ pour afficher ses widgets et ses erreurs #}
<div>
    <label for="{{ form.Nom.vars.id }}">Nom :</label>
    {{ form_widget(form.Nom) }}
    {% if form.Nom.vars.errors is not empty %}
        <ul>
            {% for error in form.Nom.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}
</div>

